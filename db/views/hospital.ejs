    <!-- POSTS -->
    <section id="posts">
        <div class="container">
            <div class="row">
                <div class="col">
                    <div class="card">
                      
                        <table class="table table-striped">
                            <thead class="thead-dark">
                                <tr>
                                    <th>負責醫師</th>
                                    <th>常駐醫院</th>
                                    <th>聯絡電話</th>
                                  </tr>
                                </thead>
                                <tbody>
                                  <% for(var i=0; i< data.length; i++) { %>
                                  <tr>
                                    <td>
                                      <%= data[i].doctor %>
                                    </td>
                                    <td>
                                      <%= data[i].address %>
                                    </td>      
                                    <td>
                                    <%= data[i].phone %>
                                      </td>  
                                      <td>
                                        <button value="Details" class="btn btn-secondary" onclick="editPost('<%= data[i].doctor %>')">
                                          <i class="fas fa-angle-double-right"></i> Details
                                        </button>
                                      </td>      
                                  </tr>
                                    <% } %>
                            </tbody>
                        </table>

                        <!-- PAGINATION -->
                        <nav class="ml-4">
                            <ul class="pagination">
                                <li class="page-item disabled">
