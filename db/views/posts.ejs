                <input name="sex" type="text" id="sex" class="form-control" value="">
              </div>
              <div class="form-group">
                <label for="postdate">birthday</label>
                <input name="birthday" type="date" id="birthday" class="form-control" value="">
              </div>
              <div class="form-group">
                <label for="postdate">weight</label>
                <input name="weight" type="text" id="weight" class="form-control" value="">
              </div>
              <div class="form-group">
                <label for="postdate">ligation</label>
                <input name="ligation" type="text" id="ligation" class="form-control" value="">
              </div>
              <div class="form-group">
                <label for="postdate">vaccine</label>
                <input name="vaccine" type="text" id="vaccine" class="form-control" value="">
              </div>
              <div class="form-group">
                <label for="postdate">feederId</label>
                <input name="feederId" type="text" id="feederId" class="form-control" value="">
              </div>
              <div class="form-group">
                <label for="postdate">date</label>
                <input name="date" type="date" id="date" class="form-control" value="">
              </div>
              </select>
            </div>
