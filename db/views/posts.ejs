    <!-- POSTS -->
    <section id="posts">
        <div class="container">
            <div class="row">
                <div class="col">
                    <div class="card">
                        
                        <table class="table table-striped">
                            <thead class="thead-dark">
                                <tr>
                                    <th>晶片號碼</th>
                                    <th>種類</th>
                                    <th>名字</th>
                                    <th>性別</th>
                                    <th>出生日</th>
                                    <th>體重</th>
                                    <th>結紮</th>
                                    <th>疫苗</th>
                                    <th>飼主身分證</th>
                                    <th>看診日期</th>
                                  </tr>
                                </thead>
                                <tbody>
                                  <% for(var i=0; i< data.length; i++) { %>
                                  <tr>
                                    <td>
                                      <%= data[i].id %>
                                    </td>
                                    <td>
                                      <%= data[i].category %>
                                    </td>
                                    <td>
                                      <%= data[i].name %>
                                    </td>
                                    <td>
                                      <%= data[i].sex %>
                                    </td>
                                    <td>
                                      <%= data[i].birthday %>
                                    </td>
                                    <td>
                                      <%= data[i].weight %>
                                    </td>
                                    <td>
                                      <%= data[i].ligation %>
                                    </td>
                                    <td>
                                      <%= data[i].vaccine %>
                                    </td>
                                    <td>
                                      <%= data[i].feederId %>
                                    </td>
                                    <td>
                                      <%= data[i].date %>
                                    </td>
                  
                                    <!-- <td>
                                      <button value="Details" class="btn btn-secondary" onclick="editPost('<%= data[i].id %>')">
                                        <i class="fas fa-angle-double-right"></i> Details
                                      </button>
                                    </td> -->
                                    <td>
                                        <button value="Details" class="btn btn-secondary" onclick="Edit('<%= data[i].id %>')">
                                          <i class="fas fa-angle-double-right"></i> Details
                                        </button>
                                      </td> 
                                  </tr>
                                  
                                    <% } %>
                            </tbody>
                        </table>

                        <!-- PAGINATION -->
                        <nav class="ml-4">
                            <ul class="pagination">
                                <li class="page-item disabled">
                                    <a href="#" class="page-link">Previous</a>
                                </li>
                                <li class="page-item active">
