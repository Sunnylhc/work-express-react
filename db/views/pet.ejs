    <div class="container">
      <div class="row">
        <div class="col-md-9">
          <div class="card">
            <div class="card-header">
              <h4>寵物資料</h4>
            </div>
            <table class="table table-striped">
              <thead class="thead-dark">
                <tr>
                  <th>晶片號碼</th>
                  <th>種類</th>
                  <th>名字</th>
                  <th>性別</th>
                  <th>出生日</th>
                  <th>體重</th>
                  <th>結紮</th>
                  <th>疫苗</th>
                  <th>飼主身分證</th>
                  <th>看診日期</th>
                </tr>
              </thead>
              <tbody>
                <% for(var i=0; i< data.length; i++) { %>
                <tr>
                  <td>
                    <%= data[i].id %>
                  </td>
                  <td>
                    <%= data[i].category %>
                  </td>
                  <td>
                    <%= data[i].name %>
                  </td>
                  <td>
                    <%= data[i].sex %>
                  </td>
                  <td>
                    <%= data[i].birthday %>
                  </td>
                  <td>
                    <%= data[i].weight %>
                  </td>
                  <td>
                    <%= data[i].ligation %>
                  </td>
                  <td>
                    <%= data[i].vaccine %>
                  </td>
                  <td>
                    <%= data[i].feederId %>
                  </td>
                  <td>
                    <%= data[i].date %>
                  </td>

                  <!-- <td>
